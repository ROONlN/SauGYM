@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 70vh;">
        <div class="col-md-5">

            <div class="card shadow-lg p-4 border-0" style="background: linear-gradient(145deg, #1e293b, #0f172a);">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-white">WELCOME BACK</h2>
                        <p class="text-secondary small">Enter your credentials to access your account</p>
                    </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control bg-dark text-white border-secondary" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-secondary">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control bg-dark text-white border-secondary" placeholder="password" />
                            <label asp-for="Input.Password" class="text-secondary">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <label asp-for="Input.RememberMe" class="form-check-label text-secondary small">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    Remember me
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-info small text-decoration-none">Forgot Password?</a>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="login-submit" type="submit" class="btn btn-primary py-3">SECURE LOGIN</button>
                        </div>

                        <div class="text-center mt-4">
                            <p class="text-secondary small mb-0">Don't have an account?</p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white fw-bold text-decoration-none">Create Account</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}