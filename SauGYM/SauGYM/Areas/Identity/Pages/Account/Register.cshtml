@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0" style="background: linear-gradient(145deg, #1e293b, #0f172a);">
                <div class="card-body p-5">

                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-white">JOIN THE CLUB</h2>
                        <p class="text-secondary">Create your account to get started.</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="form-floating">
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="Name" />
                                    <label asp-for="Input.FirstName" class="text-secondary">Name</label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating">
                                    <input asp-for="Input.LastName" class="form-control" placeholder="Surname" />
                                    <label asp-for="Input.LastName" class="text-secondary">Surname</label>
                                    <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-secondary">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="password" />
                            <label asp-for="Input.Password" class="text-secondary">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="text-secondary">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-3 fw-bold">CREATE ACCOUNT</button>
                    </form>

                    <div class="text-center mt-4">
                        <span class="text-secondary small">Already have an account?</span>
                        <a asp-page="./Login" class="text-info fw-bold text-decoration-none ms-1">Login</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}