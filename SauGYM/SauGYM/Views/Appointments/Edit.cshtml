@model SauGYM.Models.Appointment

@{
    ViewData["Title"] = "Reschedule Session";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-secondary shadow-lg">

                <div class="card-header bg-transparent border-secondary text-center py-3">
                    <h3 class="text-white fw-bold m-0">RESCHEDULE SESSION</h3>
                    <p class="text-secondary small m-0">Update your appointment details</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="AppointmentId" />

                        <div class="form-floating mb-3">
                            <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId"></select>
                            <label asp-for="ServiceId" class="text-secondary">Service (Class)</label>
                            <span asp-validation-for="ServiceId" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="TrainerId" class="form-select" asp-items="ViewBag.TrainerId"></select>
                            <label asp-for="TrainerId" class="text-secondary">Trainer</label>
                            <span asp-validation-for="TrainerId" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="AppointmentDate" class="form-control" placeholder="Select Date" />
                            <label asp-for="AppointmentDate" class="text-secondary">Date & Time</label>
                            <span asp-validation-for="AppointmentDate" class="text-danger small"></span>
                        </div>

                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="bi bi-info-circle-fill me-2 fs-4"></i>
                            <div class="small">
                                <strong>Note:</strong> Changing the date or trainer will reset the status to <strong>Pending</strong>. An admin will need to re-approve your request.
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning py-3 fw-bold text-dark">
                                <i class="bi bi-calendar-check"></i> UPDATE APPOINTMENT
                            </button>
                            <a asp-action="MyAppointments" class="btn btn-outline-secondary py-2">CANCEL</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}