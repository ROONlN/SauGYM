@model IEnumerable<SauGYM.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4"><i class="bi bi-calendar-check"></i> Randevularım</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            Henüz hiç randevunuz yok. <a asp-action="Create" class="alert-link">Hemen bir randevu alın!</a>
        </div>
    }
    else
    {
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Tarih & Saat</th>
                    <th>Hizmet</th>
                    <th>Antrenör</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AppointmentDate.ToString("dd MMMM yyyy HH:mm")</td>
                        <td>@item.Service?.ServiceName</td>
                        <td>@item.Trainer?.FullName</td>
                        <td>
                            @if (item.Status == "Onay Bekliyor")
                            {
                                <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                            }
                            else if (item.Status == "Onaylandı")
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@item.Status</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-action="Create" class="btn btn-primary mt-3">
            <i class="bi bi-plus-circle"></i> Yeni Randevu Al
        </a>
    }
</div>