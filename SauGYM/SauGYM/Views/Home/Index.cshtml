@{
    ViewData["Title"] = "Home Page";
}

<div class="p-5 mb-5 rounded-3 text-center position-relative overflow-hidden"
     style="background: linear-gradient(rgba(15, 23, 42, 0.8), rgba(15, 23, 42, 0.9)), url('https://images.unsplash.com/photo-1599058945522-28d584b6f0ff?q=80&w=2069&auto=format&fit=crop'); background-size: cover; background-position: center; min-height: 500px; display: flex; align-items: center; justify-content: center;">

    <div class="position-relative z-1">
        <h1 class="display-2 fw-bold text-white mb-3" style="text-shadow: 0 0 20px rgba(6, 182, 212, 0.5);">NEXT LEVEL FITNESS</h1>
        <p class="lead text-gray-300 mb-4 mx-auto" style="max-width: 600px;">
            Experience the future of training with AI-powered coaching and world-class trainers.
        </p>
        <div class="d-flex justify-content-center gap-3">
            <a class="btn btn-primary btn-lg px-5" asp-controller="Home" asp-action="TrainerSearch">Start Training</a>
            <a class="btn btn-outline-light btn-lg px-5" asp-controller="Ai" asp-action="Index">AI Assistant</a>
        </div>
    </div>
</div>