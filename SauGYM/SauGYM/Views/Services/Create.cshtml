@model SauGYM.Models.Service

@{
    ViewData["Title"] = "Add Service";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-secondary shadow-lg">
                <div class="card-header bg-transparent border-secondary text-center py-3">
                    <h3 class="text-white fw-bold m-0">ADD NEW SERVICE</h3>
                    <p class="text-secondary small m-0">Define a new class or workout session</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="ServiceName" class="form-control" placeholder="Service Name" />
                            <label asp-for="ServiceName" class="text-secondary">Service Name (e.g. Pilates)</label>
                            <span asp-validation-for="ServiceName" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Duration" class="form-control" placeholder="Duration" type="number" />
                                    <label asp-for="Duration" class="text-secondary">Duration (mins)</label>
                                    <span asp-validation-for="Duration" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Price" class="form-control" placeholder="Price" type="number" step="0.01" />
                                    <label asp-for="Price" class="text-secondary">Price ($)</label>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary py-3 fw-bold">SAVE SERVICE</button>
                            <a asp-action="Index" class="btn btn-outline-secondary py-2">CANCEL</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}