@model IEnumerable<SauGYM.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-6 fw-bold text-white">SERVICE MENU</h1>
            <p class="text-secondary">Manage gym classes and pricing.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Service
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 bg-dark border-secondary hover-effect position-relative overflow-hidden">
                    <div class="position-absolute top-0 start-0 w-100" style="height: 4px; background: linear-gradient(90deg, #06b6d4, #3b82f6);"></div>

                    <div class="card-body text-center p-4 d-flex flex-column">
                        <div class="mb-3">
                            <i class="bi bi-activity text-info display-4"></i>
                        </div>

                        <h4 class="card-title fw-bold text-white mb-1">@item.ServiceName</h4>
                        <div class="text-secondary small mb-3">
                            <i class="bi bi-stopwatch"></i> @item.Duration mins
                        </div>

                        <div class="mt-auto">
                            <h3 class="text-success fw-bold mb-3">$@item.Price</h3>

                            <div class="btn-group w-100">
                                <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>