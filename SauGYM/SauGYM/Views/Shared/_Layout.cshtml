<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SauGYM Global</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        /* --- THEME: ELECTRIC BLUE & SLATE --- */
        :root {
            --primary-bg: #0f172a; /* Çok koyu arduvaz grisi */
            --card-bg: #1e293b; /* Kart rengi */
            --accent: #06b6d4; /* Elektrik Mavisi (Cyan) */
            --text-main: #f8fafc;
        }

        body {
            background-color: var(--primary-bg);
            color: var(--text-main);
            font-family: 'Rajdhani', sans-serif;
            font-size: 1.1rem;
        }

        body, p, h1, h2, h3, h4, h5, h6, td, th, label, span {
            color: #f1f5f9 !important; /* Her şeyi neredeyse beyaz yap */
        }

        /* Tablo Tasarımı */
        .table {
            --bs-table-bg: transparent;
            --bs-table-color: #f1f5f9;
            border-color: rgba(255, 255, 255, 0.1);
        }

            .table thead th {
                background-color: #0f172a; /* Başlık Koyu Lacivert */
                color: #06b6d4 !important; /* Başlık Yazısı Neon Mavi */
                text-transform: uppercase;
                font-size: 0.85rem;
                letter-spacing: 1px;
                border-bottom: 2px solid #06b6d4;
                padding: 15px;
            }

            .table tbody td {
                padding: 15px;
                vertical-align: middle;
                border-bottom: 1px solid rgba(255,255,255,0.05);
            }

        .table-hover tbody tr:hover {
            background-color: rgba(6, 182, 212, 0.05); /* Üzerine gelince çok hafif mavi */
        }

        /* Silik yazıları düzeltme */
        .text-muted {
            color: #94a3b8 !important; /* Daha açık gri yap */
        }

        /* Navbar Design */
        .navbar {
            background: rgba(30, 41, 59, 0.95) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(6, 182, 212, 0.3);
            padding: 15px 0;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 2rem;
            color: var(--accent) !important;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .nav-link {
            color: #94a3b8 !important;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9rem;
            letter-spacing: 1px;
            transition: 0.3s;
        }

            .nav-link:hover, .nav-link.active {
                color: var(--accent) !important;
                text-shadow: 0 0 10px rgba(6, 182, 212, 0.5);
            }

        /* Cards Redesign */
        .card {
            background-color: var(--card-bg);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
                border-color: var(--accent);
            }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(45deg, #0891b2, #06b6d4);
            border: none;
            color: white;
            padding: 10px 30px;
            font-weight: 700;
            text-transform: uppercase;
            border-radius: 4px;
            letter-spacing: 1px;
        }

            .btn-primary:hover {
                box-shadow: 0 0 15px rgba(6, 182, 212, 0.6);
            }

        .btn-outline-accent {
            border: 1px solid var(--accent);
            color: var(--accent);
        }

            .btn-outline-accent:hover {
                background-color: var(--accent);
                color: #000;
            }

        /* Footer */
        footer {
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            margin-top: 50px;
            padding: 30px 0;
            font-size: 0.9rem;
            color: #64748b;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top mb-5">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-activity"></i> Sau<span class="text-white">GYM</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="TrainerSearch">Find Trainer</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Ai" asp-action="Index">AI Coach</a></li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-warning" href="#" data-bs-toggle="dropdown">ADMIN</a>
                                <ul class="dropdown-menu dropdown-menu-dark shadow">
                                    <li><a class="dropdown-item" asp-controller="Appointments" asp-action="Index">Appointments</a></li>
                                    <li><a class="dropdown-item" asp-controller="Trainers" asp-action="Index">Trainers</a></li>
                                    <li><a class="dropdown-item" asp-controller="Services" asp-action="Index">Services</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link text-info" asp-controller="Appointments" asp-action="MyAppointments">My Schedule</a></li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div style="margin-top: 100px;">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="text-center">
        <div class="container">
            &copy; 2025 - <strong>SauGYM International</strong> - Powered by ASP.NET Core
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>