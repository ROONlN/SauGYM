@model SauGYM.Models.Trainer

@{
    ViewData["Title"] = "Add Trainer";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark border-secondary shadow-lg">
                <div class="card-header bg-transparent border-secondary text-center py-3">
                    <h3 class="text-white fw-bold m-0">REGISTER NEW TRAINER</h3>
                    <p class="text-secondary small m-0">Add a new expert to your team</p>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                                    <label asp-for="FullName" class="text-secondary">Full Name</label>
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Specialization" class="form-control" placeholder="Specialization" />
                                    <label asp-for="Specialization" class="text-secondary">Specialization (e.g. Yoga)</label>
                                    <span asp-validation-for="Specialization" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="ImageUrl" class="form-control" placeholder="Photo URL" />
                            <label asp-for="ImageUrl" class="text-secondary">Photo URL (Optional)</label>
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="WorkingHours" class="form-control" placeholder="Working Hours" />
                            <label asp-for="WorkingHours" class="text-secondary">Working Hours (e.g. 09:00 - 17:00)</label>
                            <span asp-validation-for="WorkingHours" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info text-white py-3 fw-bold">CREATE TRAINER PROFILE</button>
                            <a asp-action="Index" class="btn btn-outline-secondary py-2">CANCEL</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}