@model SauGYM.Models.Trainer

@{
    ViewData["Title"] = "Delete Trainer";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-danger shadow-lg">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h4 class="m-0 fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> DELETE CONFIRMATION</h4>
                </div>
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-person-x-fill text-danger display-1"></i>
                    </div>

                    <h3 class="text-white mb-3">Are you sure?</h3>
                    <p class="text-secondary mb-4">
                        You are about to permanently delete the trainer <br>
                        <strong class="text-white fs-5">@Model.FullName</strong>.
                        <br>This action cannot be undone.
                    </p>

                    <div class="d-flex justify-content-center gap-3">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="TrainerId" />
                            <button type="submit" class="btn btn-danger btn-lg px-5">
                                <i class="bi bi-trash-fill"></i> YES, DELETE
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>